// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  number Int @unique
  name String
  email String @unique
  password String
  cpf Float
  isAdmin Boolean

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model Profile {
  id String @id @default(uuid())
  name String @unique
  imageUrl String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  relations Relation[]

  relation2 Relation2[]

  @@map("profile")
}

model Games {
  id String @id @default(uuid())
  name String @unique
  coverImageUrl String
  description String
  year Float
  imdbScore Int
  trailerYouTubeUrl String
  gameplayYouTubeUrl String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  relation Relation[]

  relation2 Relation2[]

  @@map("games")
}

model Gender {
  id String @id @default(uuid())
  name String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  relation Relation[]

  relation2 Relation2[]

  @@map("gender")
}

model Relation {
  id String @id @default(uuid())

  gender Gender @relation(fields: [gendersId], references: [id])
  gendersId String @map("gender_id")

  profile Profile @relation(fields: [profileId], references: [id])
  profileId String @map("profile_id")

  gamers Games[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("relation")
}

model Relation2 {
  id String @id @default(uuid())
  favorite Boolean

  gender Gender @relation(fields: [gendersId], references: [id])
  gendersId String @map("genders_id")

  profile Profile @relation(fields: [profileId], references: [id])
  profileId String @map("profiles_id")

  game Games[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("relation2")
}